{
  "name": "react-boilerplate-component",
  "version": "4.0.1",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@craco/craco": "5.8.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "flexsearch": "nextapps-de/flexsearch#0.7.0",
    "lodash": "^4.17.19",
    "pandasuite-bridge": "^4.2.3",
    "pandasuite-bridge-react": "^2.0.7",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.0",
    "react-intl": "^4.7.2",
    "react-json-view": "^1.19.1",
    "react-scripts": "3.4.0",
    "recoil": "^0.0.10"
  },
  "scripts": {
    "start": "craco start",
    "build": "rm -f ./pandasuite-component.zip && GENERATE_SOURCEMAP=false craco build && rm -f build/static/js/*.map && cd build && zip -r -X '../pandasuite-component.zip' *",
    "test": "craco test",
    "eject": "react-scripts eject",
    "release": "yarn build && release-it --no-npm.publish"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "IE >= 9",
      "Android > 0",
      "iOS > 0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.1.0",
    "autoprefixer": "^9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "postcss": "^7",
    "release-it": "^13.0.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "pandasuite-component.zip"
      ]
    }
  }
}
